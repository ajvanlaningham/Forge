<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forge.Views.SubPages.MyGearPage"
             x:Name="Root"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <Style x:Key="TileFrame" TargetType="Frame">
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="HeightRequest" Value="110" />
            <Setter Property="WidthRequest"  Value="110" />
            <Setter Property="BackgroundColor" Value="{DynamicResource CardBackground}" />
            <Setter Property="BorderColor" Value="Transparent" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="16" RowDefinitions="Auto,*" RowSpacing="12">
        <Label Text="Tap gear you own to toggle."
               FontSize="16"
               Margin="2,0,0,4" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding GroupedGear}"
                        IsGrouped="True"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    Orientation="Vertical"
                    Span="3"
                    HorizontalItemSpacing="16"
                    VerticalItemSpacing="16" />
            </CollectionView.ItemsLayout>

            <!-- Group header -->
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Grid Padding="4,8" Margin="0,8,0,0">
                        <Label Text="{Binding Title}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Accent}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource TileFrame}">
                        <Grid RowDefinitions="*,Auto" RowSpacing="6">
                            <Label Text="{Binding Name}"
                                   FontSize="14"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center">
                                <Label.Triggers>
                                    <!-- Dim when not owned -->
                                    <DataTrigger TargetType="Label" Binding="{Binding Owned}" Value="False">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Owned strip -->
                            <BoxView Grid.Row="1" HeightRequest="4" Opacity="0.0">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView" Binding="{Binding Owned}" Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                        <Setter Property="Color" Value="{DynamicResource Accent}" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                        </Grid>

                        <!-- Tap to toggle -->
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding BindingContext.ToggleOwnedCommand, Source={x:Reference Root}}"
                                CommandParameter="{Binding}" />
                        </Frame.GestureRecognizers>

                        <!-- Highlight border when owned -->
                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame" Binding="{Binding Owned}" Value="True">
                                <Setter Property="BorderColor" Value="{DynamicResource Accent}" />
                            </DataTrigger>
                        </Frame.Triggers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
