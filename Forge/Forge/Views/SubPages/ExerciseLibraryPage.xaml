<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forge.Views.SubPages.ExerciseLibraryPage"
             xmlns:vm="clr-namespace:Forge.ViewModels.SubPages"
             xmlns:vmEnums="clr-namespace:Forge.ViewModels.SubPages"
             xmlns:res="clr-namespace:Forge.Resources.Strings"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Clear" Command="{Binding ClearFiltersCommand}" />
        <ToolbarItem Text="Refresh" Command="{Binding RefreshCommand}" Priority="1" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16" RowSpacing="12"
          RowDefinitions="Auto,Auto,*">

        <!-- Search -->
        <SearchBar Grid.Row="0"
                   Placeholder="{x:Static res:AppResources.ExerciseLibraryPage_Search}"
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding SearchCommand}" />

        <!-- Filters -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*,*"
              ColumnSpacing="12">
            <Picker Grid.Column="0"
                    Title="{x:Static res:AppResources.ExerciseLibraryPage_Category}"
                    ItemsSource="{x:Static vmEnums:ExerciseCategoryValues.All}"
                    SelectedItem="{Binding Category}" />
            <Picker Grid.Column="1"
                    Title="{x:Static res:AppResources.ExerciseLibraryPage_Zone}"
                    ItemsSource="{x:Static vmEnums:BodyZoneValues.All}"
                    SelectedItem="{Binding BodyZone}" />
            <Button Grid.Column="2"
                    Text="{x:Static res:AppResources.ExerciseLibraryPage_SearchBtn}"
                    Command="{Binding SearchCommand}" />
        </Grid>

        <!-- Scrollable list -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}"
                        VerticalOptions="FillAndExpand">
            <CollectionView.EmptyView>
                <Label Text="{x:Static res:AppResources.ExerciseLibraryPage_NoMatch}"
                       HorizontalTextAlignment="Center"
                       Margin="0,24,0,0"/>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,6"
                           HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light=#FFF, Dark=#222}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="20" />
                            <Label Text="{Binding Description}"
                                   FontSize="16"
                                   LineBreakMode="TailTruncation" />
                            <Label FontSize="16"
                                   Text="{Binding ., Converter={StaticResource ExerciseMetaConverter}}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>