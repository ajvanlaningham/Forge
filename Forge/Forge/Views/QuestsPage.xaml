<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:Forge.Converters"
             xmlns:cards="clr-namespace:Forge.Controls.Cards;assembly=Forge"
             xmlns:res="clr-namespace:Forge.Resources.Strings"
             x:Class="Forge.Views.QuestsPage"
             x:Name="Page"
             Title="{x:Static res:AppResources.QuestPage_Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:QuestExerciseFormatter x:Key="QuestExerciseFormatter" />
            <Style 
                TargetType="Label" 
                x:Key="SectionHeader">
                <Setter
                    Property="FontSize" 
                    Value="20" />
                <Setter 
                    Property="FontAttributes" 
                    Value="Bold" />
                <Setter 
                    Property="Margin"
                    Value="0,18,0,6" />
            </Style>
            <Style 
                TargetType="Label" 
                x:Key="ItemText">
                <Setter 
                    Property="FontSize"
                    Value="14" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout 
            Padding="24" 
            Spacing="10">

            <Label>
                <Label.Text>
                    <MultiBinding
                        StringFormat="{}{0:MMMM d}">
                        <Binding
                            Path="Today.Date" />
                    </MultiBinding>
                </Label.Text>
            </Label>

            <!-- Focus pill -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Accent}"
                BackgroundColor="#0A000000"
                Padding="12"
                StrokeShape="RoundRectangle 8">
                <Grid 
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="8">
                    <Label
                        Text="{x:Static res:AppResources.QuestPage_DailyFocus}"
                        FontAttributes="Bold" />
                    <Label
                        Grid.Column="1"
                        Text="{Binding DayFocusDisplay}" />

                    <!-- Recovery badge -->
                    <Border 
                        Grid.ColumnSpan="2"
                        HorizontalOptions="End"
                        Padding="6,2"
                        BackgroundColor="#2233AA55"
                        Stroke="{StaticResource Leaf}"
                        StrokeShape="RoundRectangle 6"
                        IsVisible="{Binding IsRecoveryDay}">
                        <Label
                            Text="{x:Static res:AppResources.QuestPage_RecoveryBadge}"
                            FontSize="12" />
                    </Border>
                </Grid>
            </Border>

            <!-- DAILY SECTION -->
            <Label
                Text="{x:Static res:AppResources.QuestPage_SubHeader_Daily}"
                Style="{StaticResource SectionHeader}" />

            <cards:QuestCard
                BindingContext="{Binding Today.Strength}"
                IsCompleted="{Binding Source={x:Reference Page}, Path=BindingContext.IsStrengthCompleted}"
                ToggleCommand="{Binding Source={x:Reference Page}, Path=BindingContext.ToggleStrengthCommand}" />

            <cards:QuestCard
                BindingContext="{Binding Today.Mobility}"
                IsCompleted="{Binding Source={x:Reference Page}, Path=BindingContext.IsMobilityCompleted}"
                ToggleCommand="{Binding Source={x:Reference Page}, Path=BindingContext.ToggleMobilityCommand}" />

            <!-- Empty state (when Today is null) -->
            <Grid 
                IsVisible="False"
                Margin="0,8,0,0">
                <Grid.Triggers>
                    <DataTrigger
                        TargetType="Grid"
                        Binding="{Binding Today}"
                        Value="{x:Null}">
                        <Setter 
                            Property="IsVisible"
                            Value="True" />
                    </DataTrigger>
                </Grid.Triggers>
                <Label 
                    Text="{x:Static res:AppResources.QuestPage_EmptyQuests}"
                    HorizontalOptions="Center" />
            </Grid>

            <!-- Divider -->
            <Grid 
                Margin="0,18,0,6">
                <BoxView 
                    HeightRequest="1" 
                    BackgroundColor="#22000000" />
            </Grid>

            <!-- WEEKLY SECTION -->
            <Label 
                Text="{x:Static res:AppResources.QuestPage_SubHeader_Weekly}" 
                Style="{StaticResource SectionHeader}" />
            <Label 
                Text="{x:Static res:AppResources.QuestPage_Subheader_SubHint}"
                FontSize="12"
                Opacity="0.7"
                Margin="0,0,0,8" />

            <cards:WeeklyConditioningCard
                ViewModel="{Binding Source={x:Reference Page}, Path=BindingContext.WeeklyCard}"
                Margin="0,4,0,12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
