<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Forge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Forge"
    xmlns:views="clr-namespace:Forge.Views;assembly=Forge"
    Shell.FlyoutBehavior="Flyout"
    Title="Forge">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="{StaticResource IconHome}"/>

        <ShellContent
            Title="Train"
            ContentTemplate="{DataTemplate views:TrainPage}"
            Route="train"
            Icon="{StaticResource IconTrain}"/>

        <ShellContent
            Title="Quests"
            ContentTemplate="{DataTemplate views:Quests}"
            Route="quests"
            Icon="{StaticResource IconQuests}"/>

        <ShellContent
            Title="Check-In"
            ContentTemplate="{DataTemplate views:CheckIn}"
            Route="checkin"
            Icon="{StaticResource IconCheckIn}"/>
        
        <ShellContent
            Title="Stats"
            ContentTemplate="{DataTemplate views:Stats}"
            Route="stats" 
            Icon="{StaticResource IconStats}"/>

        <ShellContent Title="Guild"
            Route="guild"
            ContentTemplate="{DataTemplate views:GuildPage}"
            Icon="{StaticResource IconGuild}"/>

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:Settings}"
            Route="settings"
            Icon="{StaticResource IconSettings}"/>
    </TabBar>
</Shell>
